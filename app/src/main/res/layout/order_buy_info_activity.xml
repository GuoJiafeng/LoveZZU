<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="5dp">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="收货人："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="aotu"
                android:id="@+id/buy_goods_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="#f77a31"
                android:textSize="15sp"
                android:gravity="right"
                android:layout_weight="1"
                android:text="待付款"
                android:id="@+id/buy_goods_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="联系电话："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="18838185470"
                android:id="@+id/buy_goods_user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="收货地址："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="郑大"
                android:id="@+id/buy_goods_user_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="创建时间："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="2017.8.10"
                android:id="@+id/buy_goods_user_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#999999" />
    <LinearLayout
        android:layout_weight="4"
        android:id="@+id/order_info_goods_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/buy_goods_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#999999" />

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/buy_goods_pay"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="4dp">
            <TextView
                android:background="#65b5fc"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="立即付款"
                android:textColor="#fff"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>
</android.support.v7.widget.CardView>